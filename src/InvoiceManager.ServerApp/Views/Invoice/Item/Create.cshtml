@model InvoiceItemViewModel

@{
    ViewBag.Title = "Creating an Invoice item";
}

<h2>Creating Invoice Item</h2>

<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Name" class="custom-control-label col-md-2"></label>
            <div>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Price" class="custom-control-label col-md-3"></label>
            <div>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-6">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" asp-controller="Item" asp-route-id="@ViewBag.ParentId" class="btn btn-secondary">Back</a>
            </div>
        </div>
</form>